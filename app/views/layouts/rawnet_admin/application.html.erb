<!DOCTYPE html>
<html>
<head>
  <title><%= site_name %> : Admin</title>
  <%= stylesheet_link_tag 'rawnet_admin/application', :media => 'all' %>
  <% RawnetAdmin.config.stylesheets.each do |sheet| %>
    <%= stylesheet_link_tag sheet, :media => 'all' %>
  <% end %>

  <%= javascript_include_tag 'rawnet_admin/application' %>
  <% RawnetAdmin.config.javascripts.each do |script| %>
    <%= javascript_include_tag script %>
  <% end %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:alert] %>
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
  <% end %>
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
  <% end %>
  <%= render "header" %>
  <%= render "search" if controller_name != "dashboard" || action_name == "index" %>
  <section role="main">
    <%= yield %>
  </section>
</body>
</html>
